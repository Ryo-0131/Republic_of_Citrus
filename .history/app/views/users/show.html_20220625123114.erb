<%= render partial: 'items/header' %>
<div class="bg_pattern Cross"></div>

<div class="main">
  <div class="inner">
    <div class="userpage_wrapper">
     <div class="box18">
      <h2 class="page-heading">
        <%= @user.nickname %>さんのマイページ
      </h2>
     </div>

<div class="table-size">
    <table class="table table-warning table-striped  table-hover table-bordered">

        <tbody>
         <tr>   
            <th class="table__col1">お名前🍊</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">お住まい🍊</th>
            <td class="table__col2"><%= @user.prefecture.name %></td>
          </tr>
          <tr>   
            <th class="table__col1">お気に入りの柑橘類🍊</th>
            <td class="table__col2"><%= @user.favorite.name %></td>
          </tr>
          <tr>
            <th class="table__col1">紹介文🍊</th>
            <td class="table__col2"><%= @user.introduction %></td>
          </tr>
         <tr>   
            <th class="table__col1">お気に入り！した柑橘類一覧🍊</th>
            <td class="table__col2"> <a class="btn btn--orange btn--radius" href= <%= likes_user_path(@user) %>>一覧を見る</a></td>
            
                      

          </tr>
          <tr>
            <th class="table__col1">プロフィール画像</th>
            <td class="table__col2"><%= image_tag @user.image.variant(resize: '500x500'), class: "item-box-img" if @user.image.attached? %></td>
          </tr>
        </tbody>
      </table>
</div>
    <div class="totop">
     <% if user_signed_in? && current_user.id == @user.id %>
     <button class="btn btn-light btn-lg text-light bg-warning" type="button" ><%= link_to "ユーザー情報を編集する", edit_user_path(current_user), class: "top-button"%></button>
     <% end %>  
       <button class="btn btn-light btn-lg text-light bg-warning" type="button" ><%= link_to "トップページへもどる", root_path, class: "top-button"%></button>
    </div>
    
    </div>
  </div>
</div>


