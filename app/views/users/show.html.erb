<%= render "shared/second-header"%>

<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.nickname %>さん
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">お名前🍊</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">お住まい🍊</th>
            <td class="table__col2"><%= @user.prefecture.name %></td>
          </tr>
          <tr>
            <th class="table__col1">お気に入りの柑橘類🍊</th>
            <td class="table__col2"><%= @user.favorite.name %></td>
          </tr>
          <tr>
            <th class="table__col1">紹介文🍊</th>
            <td class="table__col2"><%= @user.introduction %></td>
          </tr>
          <tr>
            <th class="table__col1">お気に入り！した柑橘類一覧🍊</th>
            <td class="table__col2"><%=link_to"一覧を見る",likes_user_path(@user) %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール画像</th>
            <td class="table__col2"><%= image_tag @user.image.variant(resize: '500x500'), class: "item-box-img" if @user.image.attached? %></td>
          </tr>
        </tbody>
      </table>
     <% if user_signed_in? && current_user.id == @user.id %>
      <%= link_to 'ユーザー情報を編集する', edit_user_path(current_user), class:"back-btn" %>
     <% end %>  
      <%=link_to 'トップページへもどる', root_path, class:"back-btn" %>
    </div>
  </div>
</div>


