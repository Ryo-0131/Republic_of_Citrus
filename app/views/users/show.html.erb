<%= render "shared/second-header"%>

<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.nickname %>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">お名前🍊</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">お住まい🍊</th>
            <td class="table__col2"><%= @user.prefecture.name %></td>
          </tr>
          <tr>
            <th class="table__col1">お気に入りの柑橘類🍊</th>
            <td class="table__col2"><%= @user.favorite.name %></td>
          </tr>
          <tr>
            <th class="table__col1">紹介文🍊</th>
            <td class="table__col2"><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

