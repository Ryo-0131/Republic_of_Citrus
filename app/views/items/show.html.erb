<%= render "shared/second-header"%>

<h2>一緒にレビューしましょう！</h2>
 <% if user_signed_in? %>
  <%= form_with model: @review, url: item_reviews_path(@item.id), local: true do |f|%> 
   <div class="field">
    <%= f.label :comment, "コメント" %><br/>
    <%= f.text_field :comment, id:"comment_content" %><br/>
    <%= f.number_field :all_rating, id:"comment_content" %><br/>
    <%= f.number_field :rating1, id:"comment_content" %><br/>
    <%= f.number_field :rating2, id:"comment_content" %><br/>
    <%= f.number_field :rating3, id:"comment_content" %><br/>
    <%= f.number_field :rating4, id:"comment_content" %><br/>
   </div>
    <div class="actions">
     <%= f.submit "送信する", class: :form__btn  %>
    </div>
 <% end %>
<% end %>
<h1>レビュー一覧</h1>
 <% @reviews.each do |review| %>
  <p>
   <%= link_to review.user.nickname, user_path(id: review.user.id), class: :comment_user %>
   <%= review.comment %>
  </p>
 <% end %>


 <%= render "shared/second-header"%>